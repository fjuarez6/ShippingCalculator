<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.fjuarez6.shippingcalculator.MainActivity"
    android:id="@+id/shippingRelativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/titleText"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightEditText"
        android:singleLine="false"
        android:selectAllOnFocus="true"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignRight="@+id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/baseText"
        android:id="@+id/baseTextView"
        android:layout_below="@+id/weightEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="78dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/metricText"
        android:id="@+id/metrcTextView"
        android:layout_below="@+id/weightEditText"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/addedText"
        android:id="@+id/addesdTextView"
        android:layout_below="@+id/baseTextView"
        android:layout_alignLeft="@+id/baseTextView"
        android:layout_alignStart="@+id/baseTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/totalText"
        android:id="@+id/totalTextView"
        android:layout_below="@+id/addesdTextView"
        android:layout_alignLeft="@+id/addesdTextView"
        android:layout_alignStart="@+id/addesdTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/baseAmountTextView"
        android:text="0"
        android:layout_alignTop="@+id/baseTextView"
        android:layout_alignRight="@+id/weightEditText"
        android:layout_alignEnd="@+id/weightEditText"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/addedAmountTextView"
        android:layout_alignTop="@+id/addesdTextView"
        android:layout_alignLeft="@+id/baseAmountTextView"
        android:layout_alignStart="@+id/baseAmountTextView"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalAmountTextView"
        android:layout_alignBaseline="@+id/totalTextView"
        android:layout_alignBottom="@+id/totalTextView"
        android:layout_alignLeft="@+id/addedAmountTextView"
        android:layout_alignStart="@+id/addedAmountTextView"
        android:text="0"/>

</RelativeLayout>
